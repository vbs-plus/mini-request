{
    "compilerOptions": {
        "target": "es5",
        "sourceMap": true,
        "removeComments": false,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "declarationMap": true,
        "listEmittedFiles": true,
        "declaration": true,
        "esModuleInterop": false,
        "noEmitHelpers": false, // 注入 helper function
        // "importHelpers": true,
    },
    "exclude": [
        "node_modules"
    ]
}